@model List<webTaskManager.Models.Task>

<h1>Lista de Tarefas</h1>

<table border="1">
    <tr>
        <th>Titulo</th>
        <th>descrição</th>
        <th>Ações</th>
    </tr>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.title_task
            <td>@task.description_task</td>
            <td>
                <a href="/Home/Editar/@task.Id">✏️ Editar</a> |
                <a href="/Home/Excluir/@task.Id">🗑 Excluir</a>
            </td>
        </tr>
    }
</table>

<a href="/Home/Criar">➕ Criar Nova Tarefa</a>

